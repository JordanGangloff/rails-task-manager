<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.completed %>
    <%= task.title %>
    <%= link_to 'Details', task_path(task) %>
    <%= link_to 'Edit', edit_path(task) %>
    <%= link_to 'Delete', task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to 'Add a new task', tasks_new_path %>
